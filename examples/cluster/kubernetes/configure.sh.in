set -x
set -e

SCRIPT_DIR=$(dirname $0)
WORKDIR=`mktemp -d`

cd $WORKDIR

configtxgen -profile SampleOrg -outputBlock channel.block
configtxgen -profile SampleChannel -channelID $CONFIGURATOR_CHANNEL_NAME -outputCreateChannelTx channel.tx
configtxgen -profile SampleChannel -channelID $CONFIGURATOR_CHANNEL_NAME -asOrg Org1MSP -outputAnchorPeersUpdate anchor.tx

if [ "$CONFIGURATOR_TLS_ENABLED" == "true" ]; then
    CREATE_OPTS="--tls --cafile /etc/hyperledger/fabric/cryptogen/ordererOrganizations/orderer.net/tlsca/tlsca.orderer.net-cert.pem"
fi

until nc -z orderer 7050
do
    echo "waiting for orderer..."
    sleep 1
done

for TXN in channel anchor; do
    peer channel create -o orderer:7050 \
         -c $CONFIGURATOR_CHANNEL_NAME \
         -f $TXN.tx \
         $CREATE_OPTS
done

for PEER in $CONFIGURATOR_PEERS; do
    until nc -z $PEER 7051
    do
        echo "waiting for $PEER..."
        sleep 1
    done

    CORE_PEER_ADDRESS=$PEER:7051 peer channel join -b channel.block
done

rm -rf $WORKDIR
